<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="/css/style.css" rel="stylesheet">
  </head>
  </head>
  <body>
    <h1><%= title %></h1>
      <div class="center">
      <ul>
        <% movies.forEach(movie => { %>
          <li>
          <h2>“<%= movie.name%>”</h2>, directed by <%= movie.director %>.</li>
          <a class="btn-link" href="/<%= movie.id %>/update" id="update-button">Update</a>
          <form class="delete-form" action="/delete/<%= movie.id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        <% }) %>
      </ul>
      </div>
      <a href="/add" id="add-button">Add a new Movie!</a>
    <script src="/index.js"></script>
  </body>
</html>
